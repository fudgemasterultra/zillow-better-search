{
  "name": "Zillow Better Search",
  "description": "An application for making better searches",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "contextMenus",
    "storage",
    "notifications",
    "webNavigation",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "*://*/*"
  ],
  "background": {
    "service_worker": "./static/js/content.js"
  },
  "host_permissions": ["http://*.google.com/*"]
}
